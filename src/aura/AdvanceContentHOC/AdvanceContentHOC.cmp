<aura:component controller="AdvanceContentController" implements="forceCommunity:availableForAllPageTypes" access="global">
	<!-- CONSTRUCTOR -->
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />

	<!-- GENERAL VARIABLES --> 
    <aura:attribute name="componentExternalId" type="String" access="global"/>
    <aura:attribute name="componentWrapper" type="Object"/>
    
    <!-- INTERNAL -->
    <aura:attribute name="isLoading" type="boolean" default="true"/>
    <!-- MAIN COMPONENT -->
    <div>        
        <!-- TOOL BOX COMPONENT -->
        <c:ComponentToolBox componentType="AdvanceContent" componentExternalId="{!v.componentExternalId}" componentWrapper="{!v.componentWrapper}" salesforceDomain="{!v.componentWrapper.acceleratorSettings.SalesforceDomain__c}" isLoading="{!v.isLoading}">
            <!-- ADVANCE CONTENT LOC COMPONENT -->
            <c:AdvanceContent
                contentWrapper="{!v.componentWrapper.data.contentWrapper}"
            />

        </c:ComponentToolBox>
    </div>	
</aura:component>